---
import SubscribeButton from "./SubscribeButton.svelte";
const user = Astro.locals.user;
---

<div
  class="flex w-full flex-col items-center justify-between gap-8 px-2 py-10 lg:flex-row"
>
  <a
    href="/"
    class="py-auto flex h-14 flex-row items-center justify-center rounded-lg bg-dark px-4"
  >
    <img
      width={285}
      height={56}
      src="/assets/web/logo-lettering.svg"
      alt="proposals.app"
    />
  </a>

  <div class="flex w-fit justify-center">
    {
      user ? (
        <a href="/settings">
          <button class="block h-10 w-full rounded-lg border-2 border-gold bg-luna px-2 text-center text-gold hover:bg-dark lg:h-14">
            <div class="font-manjari text-2xl leading-[42px] lg:leading-[58px]">
              settings
            </div>
          </button>
        </a>
      ) : (
        <SubscribeButton client:load />
      )
    }

    <!-- <Suspense>
      {!user && <SubscribeButton />}
      {user && <SettingsButton />}
      {user && user.email_verified == false && (
        <VerificationModal email={user.email} />
      )}
    </Suspense> -->
  </div>
</div>
