# Database Configuration
# Use pgpool on localhost for automatic read/write splitting and failover
DATABASE_URL=postgresql://proposalsapp:your-password@localhost:5432/proposalsapp
ARBITRUM_DATABASE_URL=postgresql://proposalsapp:your-password@localhost:5432/proposalsapp
UNISWAP_DATABASE_URL=postgresql://proposalsapp:your-password@localhost:5432/proposalsapp

# Redis Configuration 
# Use HAProxy on localhost for automatic routing to local Redis instance
REDIS_URL=redis://default:your-redis-password@localhost:6380

# Application Settings
NEXT_PUBLIC_MAINTENANCE_MODE=false
NEXT_PUBLIC_ROOT_DOMAIN=proposals.app
NEXT_PUBLIC_SPECIAL_SUBDOMAINS=arbitrum,uniswap,skeletons
WEB_URL=https://proposals.app

# Auth & Email
RESEND_API_KEY=your-resend-api-key
BETTER_AUTH_SECRET=your-auth-secret
POSTMARK_API_KEY=your-postmark-api-key

# Monitoring
BETTERSTACK_KEY=your-betterstack-key
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://eu.i.posthog.com

# External APIs
TALLY_API_KEY=your-tally-api-key
ETHERSCAN_API_KEY=your-etherscan-api-key
ARBISCAN_API_KEY=your-arbiscan-api-key
OPTIMISTIC_SCAN_API_KEY=your-optimistic-scan-api-key

# Blockchain RPC URLs
ETHEREUM_NODE_URL=https://your-ethereum-rpc-url
ARBITRUM_NODE_URL=https://your-arbitrum-rpc-url
OPTIMISM_NODE_URL=https://your-optimism-rpc-url
AVALANCHE_NODE_URL=https://your-avalanche-rpc-url
POLYGON_NODE_URL=https://your-polygon-rpc-url

# Web Push Notifications
WEB_PUSH_EMAIL=contact@proposals.app
NEXT_PUBLIC_WEB_PUSH_PUBLIC_KEY=your-web-push-public-key
WEB_PUSH_PRIVATE_KEY=your-web-push-private-key

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://proposalsapp-observe:4318

# Development
TEST_ACCOUNT_SEED_PHRASE="your test account seed phrase"
REACT_EDITOR=code
CHROMATIC_PROJECT_TOKEN=your-chromatic-token