[Unit]
Description=GitHub Runner Disk Space Monitor Timer
Requires=github-runner-disk-monitor.service

[Timer]
# Run every 10 minutes (more frequent than before)
OnBootSec=2min
OnUnitActiveSec=10min
# Add some randomization to prevent all runners from checking at once
RandomizedDelaySec=2min
# Run immediately if system was powered down during scheduled time
Persistent=true
AccuracySec=1min

[Install]
WantedBy=timers.target