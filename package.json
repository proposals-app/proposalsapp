{
  "name": "proposalsapp",
  "version": "0.1.0",
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.10",
    "headless-web3-provider": "^0.3.2",
    "npm-check-updates": "^18.0.3"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.15.1",
  "private": true,
  "scripts": {
    "build-email-service": "pnpm --filter @proposalsapp/email-service run build",
    "build-emails": "pnpm --filter @proposalsapp/emails run build",
    "build-web": "pnpm --filter @proposalsapp/web run build",
    "start-email-service": "pnpm --filter @proposalsapp/email-service run start",
    "start-web": "pnpm --filter @proposalsapp/web run start",
    "update-deps": "./update-deps.sh",
    "lint": "npx eslint . --config eslint.config.mjs",
    "lint:fix": "npx eslint . --config eslint.config.mjs --fix",
    "format": "npx prettier --check --config prettier.config.mjs .",
    "format:fix": "npx prettier --write --config prettier.config.mjs .",
    "lint:rust": "cargo lint",
    "lint:rust:fix": "cargo fix",
    "format:rust": "cargo format",
    "format:rust:check": "cargo check-format",
    "check": "pnpm lint && pnpm format && pnpm lint:rust && pnpm format:rust:check",
    "fix": "pnpm lint:fix && pnpm format:fix && pnpm lint:rust:fix && pnpm format:rust",
    "verify-setup": "./scripts/verify-setup.sh"
  },
  "type": "module",
  "pnpm": {
    "overrides": {
      "prettier": "^3.6.2"
    }
  }
}
